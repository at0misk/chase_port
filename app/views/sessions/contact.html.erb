			$(document).ready(function(){
				function fadeCB(callback){
				  $('.formOut').fadeOut(600);
				  callback;
				}

				function fadeIn(){
				  $('.formIn').fadeIn(600);
				}
			      $('#mailerform').on('submit', function(){
			      var valuesToSubmit = $(this).serialize();
			      $.ajax({
			          type: "POST",
			          url: "/mail", //sumbits it to the given url of the form
			          data: valuesToSubmit,
			          success: function(result){
			            $('.formOut').fadeOut(600, function(){
			              $('.formIn').fadeIn(600);
			            });
			          } // you want a difference between normal and ajax-calls, and json is standard
			      })
			      return false; // prevents normal behaviour
			    });
			});
		</script>
